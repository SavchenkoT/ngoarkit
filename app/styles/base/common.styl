/*!******************************

  Common styles

********************************/
$table-cells-spacing = 6px
$table-cells-spacing-big = 30px

html
body
  font-size 12px
p
  margin 0
  display inline-block

img
  width 100%
  height auto
ul
  list-style none
  border none
  li
    a
      text-decoration none

h1, h2, h3, h4, h5, h6, label
  font-weight normal !important //remove default bootstrap font-weight
label
  font-family ttm-regular
input:focus,
textarea:focus // remove default bootstrap input outlines
  outline 0 !important
  box-shadow none !important

.wrapper
  max-width 1020px
  margin 0 auto

.col-right
  float right

.col-left
  float left

.not-padd
  padding 0

.cell
  width 100%
  float left
  position relative
