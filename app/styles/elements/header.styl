.header-001
    .navbar-default
        background-color #212121
        //background-color transparent
        border none
        margin-bottom 0
        .navbar-toggle
            border-color transparent
        .navbar-nav
            & > li
                & > a
                    padding-top 18px
                    padding-bottom 15px
                    padding-left 16px
                    color white
                    text-transform uppercase
                    font-size 12px
                    font-weight 700
                    line-height 1.6
                    &:after
                        content ""
                        position absolute
                        bottom -6px
                        left 0
                        display block
                        width 100%
                        height 6px
                        background-color #121212
                        opacity 0
                        z-index 1000
            & > .open
                & > a
                    &:after
                        opacity 1
    .navbar
        border-radius 0
    .navbar-collapse
        padding 0
        overflow hidden
    .navbar-brand
        font-weight 800
        margin-right 20px
        color white
        font-size 35px
        text-transform uppercase
        text-shadow 3px 0px 0px rgba(18, 18, 18, 0.004)
        &:hover
            color white
    .caret
        margin-left 11px
    .dropdown-menu
        padding 0
        .category
        a
            padding-top 11px
            padding-bottom 11px
            padding-left 11px
            padding-right 0
    .navbar-nav
        .dropdown-menu
            min-width 258px
            top 113%
            //border 1px solid #dddddd
            background-color #ffffff
            color #757575
    .caret_rotate
        margin-top 7px
        padding-right 2px
        transform rotate(-90deg)
        margin-right 5px
    .btn-default
        min-width 165px
        padding 0
        text-transform uppercase
        background-color #212121
        font-size 12px
        font-weight 700
        color white
        border 2px solid #eeeeee
        border-radius 3px
        line-height 31px
    .navbar-form
        margin-right -17px
    .category
        top -3px
        left 257px

.header-001 .navbar-nav > .open > a,
.header-001 .navbar-nav > li > a:hover,
.header-001 .navbar-nav > .open > a:active
    background-color #121212

.header-001 .navbar-nav > .open > a:visited, .header-001 .navbar-nav > .open > a:hover
    background-color #121212
    color white
