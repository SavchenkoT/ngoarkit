.rs-17
  .rs-top-header
        background-color transparent
        //padding-top 7px
        .address-block
            font-size 12px
            line-height 30px
            //line-height 18px
            font-weight 700
            color #979797
            text-transform uppercase
            letter-spacing 0.07pt
            i
                margin-right 7px
        .contacts-block
            padding 0
            margin 0
            list-style none
            li
                margin-right 15px
                margin-left 15px
                display inline-block
                a
                    display inline-block
                    color #979797
                    font-size 14px
                    font-weight 700
                    text-decoration none
                    letter-spacing 0.07pt
                    i
                        margin-right 9px
        .search-block
            margin-top -4px
        .search-full
            display none
            top -7px
            background #000
            height 31px
            position absolute
            right 0
            text-align right
            width 100%
            white-space nowrap
            z-index 10
            &.active
                display block
        .search-form
            height 100%
            input
                border 0 none
                padding 1px
                color #979797
                margin 0
                outline medium none
                text-align right
                width 100%
                height 100%
                max-width 90%
                background-color transparent
                font-size 16px
                line-height 1.5
                &::-webkit-input-placeholder
                    color #fff
                &::-moz-placeholder
                    color #fff
                &:-moz-placeholder
                    color #fff
                &:-ms-input-placeholder
                    color #fff
        .search-close
            position absolute
            right 0
            top 0
            background rgba(255, 255, 255, .3)
            height 31px
            width 47px
            font-size 20px
            padding 2px 15px
            color #979797
            i
                -moz-transition all 0.5s ease 0s
                -webkit-transition all 0.5s ease 0s
                -ms-transition all 0.5s ease 0s
                -o-transition all 0.5s ease 0s
                transition all 0.5s ease 0s
            &:hover
                i
                    cursor pointer
                    -webkit-transform rotate(-180deg)
                    -moz-transform rotate(-180deg)
                    -ms-transform rotate(-180deg)
                    -o-transform rotate(-180deg)
                    transform rotate(-180deg)
        .search-input-box
            display block
            text-align right
            padding-right 53px
            width 100%
            height 100%
            .search-btn-inner
                padding-right 10px

.rs-17 .rs-top-header .contacts-block li a:hover,
.rs-17 .rs-top-header .contacts-block li a:focus
    color #979797
    text-decoration none

.rs-17 .rs-top-header .search-btn,
.rs-17 .rs-top-header .search-btn-inner
    color #979797
    width 25px
    height 25px
    font-size 14px
    border-radius 2px
    padding 3px
    outline none
    border none
    background-color transparent
    text-align center
    -webkit-transition all 0.3s ease-out
    -moz-transition all 0.3s ease-out
    -o-transition all 0.3s ease-out
    -ms-transition all 0.3s ease-out
    transition all 0.3s ease-out

.rs-17 .rs-top-header .search-btn:hover,
.rs-17 .rs-top-header .search-btn:focus
    background-color #fff
    color #979797

.rs-17 .rs-top-header .search-input-box .search-btn-inner:hover,
.rs-17 .rs-top-header .search-input-box .search-btn-inner:focus
    color #979797
    background transparent

@media (max-width: 991px)
    .rs-17
        .rs-top-header
            .address-block
                font-size 10px
            .contacts-block
                li
                    margin-right 7px
                    margin-left 7px
                    a
                        font-size 12px

@media screen and (max-width: 767px)
    .rs-17
        .rs-top-header
            .contacts-block
                margin-top -4px
                li
                    margin-right 3px
                    margin-left 3px
                    a
                        width 25px
                        height 25px
                        text-align center
                        padding 2px
                        i
                            margin-right 0
                            vertical-align middle
                            font-size 14px
            .search-block
                margin-left 6px
            .search-form
                input
                    font-size 13px
