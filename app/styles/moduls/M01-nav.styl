body#homepage
  background #fff
  padding-top 0
.wrapper
  max-width 2050px
  margin 0 auto
.input-group-btn
  padding 0
  margin 0

.navbar.navbar-default,
.navbar-brand.foto,
.navbar-brand.setting,
.form.navbar-form
  clearfix()

.navbar-brand.setting,
.form.navbar-form
  display block
  vertical-align middle

.navbar-header
  vertical-align middle
  float left
.navbar-default.navbar-static-top
  border-color transparent

.navbar-brand.text.text-right
  display block
.collapse.navbar-collapse
  margin-left 125px
img.navbar-brand.logo
  padding 0

.navbar-header.navbar-brand
  text-align center
  padding 0

.navbar-brand.logo
  padding 0
  clearfix()
  .dropdown
    &.dropdown-lg
    .dropdown-menu
      margin-top -1px
      padding 6px 20px

  .input-group-btn
    .btn-group
      display flex !important

  .btn-group
    .btn
      border-radius 0
      margin-left -1px
      &:last-child
        border-top-right-radius 4px
        border-bottom-right-radius 4px
    .form-horizontal
      .btn[type="submit"]
        border-top-left-radius 4px
        border-bottom-left-radius 4px

