//M01- login.styl

body#homepage
  background #ffff
.wrapper
  max-width 2050px
  margin 0 auto
#login
  width 600px
  margin 0 auto
.container-fluid
  padding-left 0
  padding-right 0
.input-group-btn
  padding 0
  margin 0

.navbar
  margin-bottom 0
.navbar.navbar-default,
.navbar-brand.foto,
.navbar-brand.setting,
.form.navbar-form,
.navbar-brand.text
  clearfix()

.navbar-brand.setting,
.form.navbar-form
  display block
  vertical-align middle

.navbar-header
  vertical-align middle
  float left
.navbar-default
  background-color #fff
.navbar-default.navbar-static-top
  border-color transparent

.navbar-brand.text.text-right,
.collapse.navbar-collapse
  margin-left 125px
img.navbar-brand.logo
  padding 0

.navbar-header.navbar-brand
  text-align center
  padding 0

.navbar-brand.logo
  padding 0
  clearfix()
  .dropdown
    &.dropdown-lg
    .dropdown-menu
      margin-top -1px
      padding 6px 20px

  .input-group-btn
    .btn-group
      display flex !important

  .btn-group
    .btn
      border-radius 0
      margin-left -1px
      &:last-child
        border-top-right-radius 4px
        border-bottom-right-radius 4px
    .form-horizontal
      .btn[type="submit"]
        border-top-left-radius 4px
        border-bottom-left-radius 4px
.card
  canvas#header-blur.header-bg
    border 2px solid #4c4c4d
    border-radius 4px

.nav > li> a
  //padding 0
.navbar-nav> li> a
  padding-top 15px
  padding-bottom 15px

img.img-responsive
  width 60px
  height 60px
  display inline-block
  box-sizing border-box
.form-group
  display inline-block
  vertical-align middle
  &.phone
    margin-right 40px
  &.envelope,
  &.phone
    margin-bottom 0
  a
    color #26a9e0
    text-decoration none
    font-weight bold

@media screen and (max-width: 768px)
  #adv-search
    width 270px
  .dropdown
    &.dropdown-lg
      position static !important
    .dropdown-menu
      min-width 270px
  .navbar-header
    float right
  .navbar-brand.text.text-right
    margin-left 0
    .form-group
      display block
