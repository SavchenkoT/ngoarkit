/*!******************************
 *
 *   M03-inspection.styl
 *
 ********************************/

.panel-group
  margin-bottom 10px
  border-radius 0
  .panel
     border-radius 0
     border none
     padding 0
  .panel-heading
    border-top-right-radius 0
    border-top-left-radius 0
    padding-top 15px
    padding-left 25px
    padding-right 40px
    margin-bottom 10px
    color #fff
    background #b7c19f
    clearfix()
    &__inspect
      margin-bottom 20px
      padding-top 15px
      padding-bottom 10px
      &li, a
        font-size 16px
      .btn-link
        .fa
          margin-right 10px
    &__main
      padding-left 70px
      padding-top 0px
      line-height 40px
      .btn-link
        .fa
          margin-right 10px
    li
      margin-right 10px
    li, a
      color #fff
      font-size 20px
      font-family "cuprum-regular", sans-serif
    .input-group__elips
      margin-left 10px
    .navbar-form
      padding-left 0px
      padding-right 0px
    .addcollection
      margin-right 25px

  .list-inspection
    display inline-block
    padding 0
    li
      a
        font-size 20px
        font-family "Cuprum-Regular", sans-serif

#accordion
.panel-group
  .panel-heading
    .form-group
      margin-bottom 0
    &__main
       background-color #bbbdbf
       color #58595b


  .panel-body
    &__inspect
      padding-top 0px

  .navbar-form
    margin 0
    .search-box
      border 0px
      outline none
      width 150px
      padding-left 32px
      -webkit-border-radius 22px
      -moz-border-radius 22px
      border-radius 22px
    button
      border 0
      background none
      padding 2px 5px
      margin-top 2px
      position relative
      right -28px
      margin-bottom 0
      -webkit-border-radius 3px
      -moz-border-radius 3px
      border-radius 3px
      color #979797

  .search-box
    &:focus
      & + button
        z-index 3


.panel-primary
  & > .panel-heading
    background-color #839eb2
  .panel-body
    padding 0
    table
      tbody
        tr
           &:nth-of-type(odd)
             background-color #839eb2
             th
               &:not(:first-child)
                 background-color #e0e0e0
                 text-align center
               &:last-child
                 background-color #a3ba5d
                 text-align center
           &:nth-of-type(even)
             background-color #c5d0d8
             th
               &:not(:first-child)
                 background-color #eaeaeb
                 text-align center
               &:last-child
                 background-color #d2dbb6
                 text-align center

.panel-success
  & > .panel-heading
       background-color #bbbdbf
  .panel-body
    padding 0
    table
      tbody
        tr
          &:nth-of-type(odd)
             background-color #bbbdbf
             th
               span
                 padding 0 10px
                 &.summary
                     color #1b75bb
               &:last-child
                 background-color #e0e0e0
                 text-align center
          &:nth-of-type(even)
             background-color #dddedf
             th
               span
                 padding 0 10px
               &:not(:first-child)
                 background-color #f0f0f0
                 text-align center
               &:last-child
                 background-color #f0f0f0
                 text-align center
        th
           .fa-clock-o
               &:before
                   color #1b75bb
           .fa-check-circle-o
               &:before
                   color #37b34a
           .fa-question-circle-o
               &:before
                   color #90278e
           .fa-times-circle-o
               &:before
                   color #f05a28
           .fa-exclamation-circle
               &:before
                   color #ff9100
           .fa-ban
               &:before
                   color #26a9e0

.panel-info
  & > .panel-heading
     background-color #c1b49a
  .panel-body
    padding 0
    table
    tbody
      tr
         &:nth-of-type(odd)
             background-color #c1b49a
             th
                 span
                   padding 0 10px
                   &.summary
                     color #1b75bb
                 &:last-child
                   background-color #d3c5ab
                   text-align center
         &:nth-of-type(even)
             background-color #e9e2d5
             th
                 span
                     padding 0 10px
                 &:not(:first-child)
                     background-color #f0f0f0
                     text-align center
                 &:last-child
                     background-color #f0f0f0
                     text-align center
      th
        .fa-clock-o
           &:before
               color #1b75bb
        .fa-check-circle-o
           &:before
               color #37b34a
        .fa-question-circle-o
           &:before
               color #90278e
        .fa-times-circle-o
           &:before
               color #f05a28
        .fa-exclamation-circle
           &:before
               color #ff9100
        .fa-ban
           &:before
               color #26a9e0

.panel-body
  .table
     margin-bottom 0
     thead
         tr
             border-color none
             th
                 color #808184
                 &:not(:first-child)
                     text-align center
                 .fa-calendar-o
                     &:before
                         color #26a9e0
                 .fa-calendar-plus-o
                     &:before
                         color #37b34a
                 .fa-calendar-check-o
                     &:before
                         color #bbbdbf
                 .fa-calendar-times-o
                     &:before
                         color #be1e2d
                 .fa-calendar-minus-o
                     &:before
                         color #ee5928
     .table-condensed
         &.table-striped
             padding 0

.panel-heading
   vertical-align middle
   border-color inherit
   border-top-right-radius 0
   border-top-left-radius 0
   padding 9px 15px 9px 15px
   font-size 15px
   .name_colection
       color #fff
       display inline-block
       margin 0
       padding-left 15px
   >h3.panel-title
       display inline-block
       font-size 20px
       font-weight 600

