#accordion.panel-group
  margin-bottom 10px
  border-radius 0
.panel-group .panel
  border-radius 0
.panel-heading, .input-group.pull-right
  clearfix()
.panel-title
  #plusToPanel
    display inline-block
.collapse
  display inline-block
p.name_colection
  display inline-block
  font-size 20px
  margin-right 40px
.panel-default>.panel-heading
  margin-bottom 30px
  background-color #808184
.panel-default
  border transparent

ul.link_list
  display inline-block
  list-style none
  li
    display inline-block
    margin-right 75px
    &:last-child
      margin-right 0
    li
      &a:hover
        text-decoration none
.input-group.pull-right
  text-align right
i.fa.fa-chevron-down,
i.fa.fa-ellipsis-v
  color #fff
  transform rotateY(180deg)
  &:hover
    transform none
    transition 0
    -webkit-transition 0
#adv-search.input-group.pull-right
  width 270px
.link_list
  margin-left 125px
.colwhite
  color #fff
.colgrey
  color #58595b
button.btn.btn-default.status
  min-width 270px


.dropdown
  &.dropdown-lg
    .dropdown-menu
      margin-top -1px
      padding 6px 20px

.input-group-btn
  .btn-group
    display flex !important

.btn-group
  .btn
    border-radius 0
    margin-left -1px
    &:last-child
      border-top-right-radius 0
      border-bottom-right-radius 0
  .form-horizontal
    .btn[type="submit"]
      border-top-left-radius 0
      border-bottom-left-radius 0

.form-horizontal
  .form-group
    margin-left 0
    margin-right 0

@media (max-width: 1050px)
  .col-sm-8,
  .col-xs-12
    .panel-body
      .table.table
        thead
          tr
            th
              font-size 12px
  .link_list
    margin-left none

.form-group,
.form-control
  &:last-child
    border-top-left-radius 0
    border-bottom-left-radius 0
    border-bottom-left-radius 0
    border-bottom-left-radius 0
    border-bottom-left-radius 0

