//M03- inspection.styl

#accordion.panel-group
  margin-bottom 10px
  border-radius 0
.panel-group .panel
  border-radius 0
.panel-heading
  background-color #808184
.panel-heading, .input-group.pull-right
  clearfix()
.panel-title
  #plusToPanel
    display inline-block
.collapse
  display inline-block

.alert
  padding 10px
  border-radius 0
.list-col
  background-color #e6e7e8
  .colection-info
      padding 10px 25px 10px 40px
      margin-bottom 20px
i.fa.fa-plus.colgrey
  padding 10px
p.name_colection
  display inline-block
  font-size 20px
  margin-right 40px
.panel-info> .panel-heading
  color #fff
.panel-default > .panel-heading
  background-color #e6e7e8
.panel-heading
  border-top-right-radius 0
  border-top-left-radius 0
.panel-default
  border transparent
ul.link_list
  display inline-block
  list-style none
  li
    display inline-block
    margin-right 75px
    &:last-child
      margin-right 0
    li
      &a:hover
        text-decoration none
.input-group.pull-right
  text-align right
i.fa.fa-chevron-down,
i.fa.fa-ellipsis-v
  color #fff
  transform rotateY(180deg)
  &:hover
    transform none
    transition 0
    -webkit-transition 0
#adv-search.input-group.pull-right
  width 270px
.link_list
  margin-left 125px
.colwhite
  color #fff
.colgrey
  color #58595b
input.form-control.login
  background url("images/search.png")
  background-repeat no-repeat
button.btn.btn-default.status
  min-width 270px
  #custom-search-form
    margin 0
    margin-top 5px
    padding 0
    .search-query
      padding-right 3px
      padding-right 4px \9
      padding-left 3px
      padding-left 4px \9
      margin-bottom 0
      -webkit-border-radius 0px
      -moz-border-radius 0px
      border-radius 0px
      -webkit-transition width  0.2s ease-in-out
      -moz-transition width  0.2s ease-in-out
      -o-transition width  0.2s ease-in-out
      transition width  0.2s ease-in-out
    button
      border 0
      background none
      padding 2px 5px
      margin-top 2px
      position relative
      left -28px
      margin-bottom 0
      -webkit-border-radius 3px
      -moz-border-radius 3px
      border-radius 3px

  .search-query
    &:focus
      width 260px
      & + button
        z-index 3

.dropdown
  &.dropdown-lg
    .dropdown-menu
      margin-top -1px
      padding 6px 20px

.input-group-btn
  .btn-group
    display flex !important

.btn-group
  .btn
    border-radius 0
    margin-left -1px
    &:last-child
      border-top-right-radius 0
      border-bottom-right-radius 0
  .form-horizontal
    .btn[type="submit"]
      border-top-left-radius 0
      border-bottom-left-radius 0

.form-horizontal
  .form-group
    margin-left 0
    margin-right 0

@media (max-width: 1050px)
  .col-sm-8,
  .col-xs-12
    .panel-body
      .table.table
        thead
          tr
            th
              font-size 12px
  .link_list
    margin-left none

.form-group,
.form-control
  border-radius 0

@media screen and (min-width: 768px)
  #adv-search
    width 500px
    margin 0 auto
  .dropdown
    &.dropdown-lg
      position static !important
    .dropdown-menu
      min-width 500px
