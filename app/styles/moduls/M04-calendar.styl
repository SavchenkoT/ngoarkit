#calendar
  time.icon
    color #2a3f54
    display: block
    position: relative
    width: 70px
    height: 70px
    background-color: #fff
    margin: 0 auto
    border-radius:4px
    overflow: hidden

  time.icon *
    display: block
    width: 100%
    //font-size: 22px
    //font-weight: bold
    font-style: normal
    text-align: center

  time.icon strong
    //position: absolute
    top: 0
    //padding: 5px 10px
    color: #fff
    background-color: #b7c19f
    box-shadow: 0 2px 0 #b7c19f

  time.icon em
    position: absolute
    //bottom: 0.3em
    //color: #fd9f1b

  time.icon span
    width: 100%
    font-size: 24px
    //letter-spacing: -0.05em
    padding-top: 10px
    color: #2f2f2f

  time.icon sup
    position absolute
    top 20px
    line-height 20px


