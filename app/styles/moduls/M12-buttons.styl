.btn
  border-radius: 0
  border: 0
  margin:0
.btn-default
  color: #555

.btn-default:hover, .btn-default:focus
  background-color: #f4f4f4

.wrapper-select
  width: 170px
  cursor: pointer
  position: relative
  color: #000

.wrapper-select_default
  color: #808184
  position: absolute
  display: block
  width: 170px
  padding-right: 10px
  padding-left: 20px
  padding-top: 5px
  padding-bottom: 5px
  box-sizing: border-box
  border: 1px solid black
  border-radius: 6%

  &:after
    content:''
    display: block
    position: absolute
    top: 4px
    right: 7px
    width: 10px
    height: 10px
    border: 2px solid #26a9e0
    border-top: none
    border-right: none
    transform: rotate(-45deg)

.wrapper-select_list
  position:absolute
  top:29px
  width:100%
  padding:0
  margin:0
  margin-top:-1px
  border:1px solid black
  border-top:none
  box-sizing:border-box
  opacity:0
  visibility:hidden


.wrapper-select_item
  padding-left:20px
  padding-top:5px
  padding-bottom:5px
  list-style:none
  &:hover
    background-color: grey
  &:last-child
   padding-bottom:5px


.active
  opacity:1
  visibility:visible
  color:#000

.choosen
  background-color: #26a9e0
  color:#000
