 *   M22-catalog.styl
 *
 ******************************/
#catalog
  .catalog_items
    display flex
    .catalog_item
      background-color #b7c19f
      text-transform uppercase
      padding 7px 75px
      margin-right 20px
      &:last-child
        margin-right 0
      a
        color #fff
        font-size 22px
        line-height 22px
  .pull-left
    li
      .wrapper-select
        float right
        border none
        span
          margin-left 10px
          padding 0
          border:none
          &:after
            top 4px
            left 50px
            right 0



  .catalog_buttons-select,
  .catalog_buttons-checkbox
    display inline-block
    color #fff
    //padding-right 70px
    input[type='checkbox']
      display none
      & + label
        position relative
        padding-left 25px
        &:before
          content ""
          display block
          position absolute
          left 0
          top 6px
          width 10px
          height 10px
          border 1px solid green
          box-sizing border-box
        &:after
          position absolute
          display none
          top 1px
          left 2px
          content ""
          width 8px
          height 13px
          border 2px solid #008000
          border-left none
          border-top none
          transform rotate(45deg)
    input:checked
      & + label
        &:after
          display block

  .input-group
    margin-bottom 5px
    &:last-child
        span
            &.input-group-addon-remove
                display none
        input
            &.form-control
                border-bottom-right-radius 3px
                border-top-right-radius 3px
    span
      &.input-group-addon-remove
        cursor pointer
        background none
        border none

.catalog__promo
  display flex
  justify-content space-between
.catalog_product
  padding 15px 0
  .catalog-box
    margin-bottom 15px
    padding-bottom 10px
    border-bottom 1px solid #dbdbdb
    .catalog__promo
      display flex
      position relative
      .image-cell
        width auto
      .info-cell
        margin-left 15px
        .text-title
          font-size 13px
          line-height 17px
          color blue
        .catalog_object-type
          width 62%
          margin-top 10px
          margin-bottom 10px
      .price-box
        position absolute
        right 0
        width auto
        & > a
          display block
          margin-bottom 10px
        .btn-group
          .dropdown-menu
            li
              width 100%




.catalog_page-nav
  margin-bottom 10px

.open
  & > .dropdown-select
    -webkit-transform scale(1, 1)
    transform scale(1, 1)
    opacity 1
    z-index 100

.dropdown-select
  position absolute
  right 0
  opacity .3
  -webkit-transform-origin top
  transform-origin top
  transform translateX(50px)
  -webkit-animation-fill-mode forwards
  animation-fill-mode forwards
  -webkit-transform scale(1, 0)
  transition all 0.3s linear
  -webkit-transition all 0.3s linear
  li
    display block

.caret-up
  width 0
  height 0
  border-left 4px solid rgba(0, 0, 0, 0)
  border-right 4px solid rgba(0, 0, 0, 0)
  border-bottom 4px solid
  display inline-block
  margin-left 2px
  vertical-align middle
.btn-group
  li
    position relative
  & > li
    margin-right 10px