  /*!******************************
 *
 *   M22-catalog.styl
 *
 ******************************/
#catalog
  .catalog_items
    display flex
    justify-content space-between
    .catalog_item
      width calc(100%/3 - 1rem)
      margin-right 20px
      padding-top 7px
      padding-bottom 7px
      text-align center
      background-color #b7c19f
      text-transform uppercase
      &:last-child
        margin-right 0px
      a
        color #fff
        font-size 22px
        line-height 22px
  .pull-left
    li
      .wrapper-select
        float right
        border none
        span
          margin-left 10px
          padding 0px
          border: none
          &:after
            top 4px
            left 50px
            right 0px

  .catalog_buttons-select,
  .catalog_buttons-checkbox
    display inline-block
    color #fff
    input[type="checkbox"]
      display none
      & + label
        position relative
        padding-left 25px
        &:before
          content ""
          display block
          position absolute
          left 0
          top 6px
          width 10px
          height 10px
          border 1px solid green
          box-sizing border-box
        &:after
          position absolute
          display none
          top 1px
          left 2px
          content ""
          width 8px
          height 13px
          border 2px solid #008000
          border-left none
          border-top none
          transform rotate(45deg)
    input:checked
      & + label
        &:after
          display block

  .input-group
    margin-bottom 5px
    &:last-child
      span
        &.input-group-addon-remove
          display none
      input
        &.form-control
          border-bottom-right-radius 3px
          border-top-right-radius 3px
    span
      &.input-group-addon-remove
        cursor pointer
        background none
        border none

.catalog__promo
  display flex
  flex-wrap wrap

.catalog_product
  padding 15px 0px
  .catalog-box
    margin-bottom 15px
    padding-bottom 10px
    border-bottom 1px solid #dbdbdb
    .catalog__promo
      display flex
      position relative
      .image-cell
          width 20%
          border 1px solid #d0d2d3
          border-radius 4px
          +below($mqPhone)
            width 80%
            margin 0 auto
      .info-cell
        width 80%
        padding-left 15px
        .text-title
          a
            display inline-block
            font-size 25px
            line-height 17px
            color #1b75bb
.catalog_object-type
  width 70%
  color #color #5c5c5c
  font-size 14px
  font-weight 600
  margin-top 10px
  margin-bottom 10px
.price-box
  position absolute
  right 0px
  width auto
  .info-resourse
    width 100%
    max-width 180px
    color #6d6e70
    margin-bottom 10px
    background-color #e6e7e8
    border-radius 4px
    border 1px solid #929496
    box-sizing border-box
    padding-left 10px
    span
      &:nth-of-type(1)
        margin-right 20px
.btn-group
  .btn
    position relative
    z-index 1001
    outline none
    border 1px solid grey
    &:nth-of-type(1)
      border-top-right-radius 0px
      border-bottom-right-radius 0px
    &:nth-of-type(2)
      background-color white
      border-left none
      border-top-left-radius 0px
      border-bottom-left-radius 0px
      .fa
        margin-left 7px
        transform scale(1.5)
  .dropdown-menu
    width 100%
    top 94%
    min-width auto
    border none
    text-align right
    li
      width 100%

      a
        padding-right 13px
        .fa
          margin-left 7px
      &:nth-of-type(1)
        margin-top 5px

.catalog_page-nav
  margin-bottom 10px
.open
  & > .dropdown-select
    -webkit-transform scale(1, 1)
    transform scale(1, 1)
    opacity 1
    z-index 100
.dropdown-select
  position absolute
  right 0
  opacity .3
  -webkit-transform-origin top
  transform-origin top
  transform translateX(50px)
  -webkit-animation-fill-mode forwards
  animation-fill-mode forwards
  -webkit-transform scale(1, 0)
  transition all 0.3s linear
  -webkit-transition all 0.3s linear
  li
    display block
.caret-up
  width 0
  height 0
  border-left 4px solid rgba(0, 0, 0, 0)
  border-right 4px solid rgba(0, 0, 0, 0)
  border-bottom 4px solid
  display inline-block
  margin-left 2px
  vertical-align middle

.btn-group
  li
    position relative
  & > li
    margin-right 10px

.info-block
  max-width 300px
  padding-right 20px
  padding-left 20px
  margin 0 auto
  border-bottom 1px solid
  &:last-child
    border-bottom 0px
  .img-box
    width 100%
    height 200px
    border 1px solid
    border-radius 4px
    margin-bottom 20px
    background-image url('../css/images/img1.png')
    background-repeat no-repeat
    background-size cover
    margin-right 10px
    .btn-link-big
      font-size 40px
  .group-buttons
    margin-bottom 20px
  .group-document
    padding-top 10px
    padding-bottom 10px
    btn.btn-link >.fa
      color #929497
      font-size 35px
      margin-bottom 10px

.catalog_title
  p
    font-size 36px
    margin-top 0px
    margin-bottom 0px
    font-weight 100
    font-family "cuprum-regular", sans-serif

@media (max-width: $mqPhone)
  #catalog
    .catalog_items
      flex-direction column
      align-items center
      .catalog_item
        margin-right 0
        margin-bottom 10px
        &:last-child
          margin-bottom 0px
@media (max-width: 650px)
  .catalog_product
    .catalog-box
      .catalog__promo
        .image-cell
          margin-right 15px
        .info-cell
          margin-left 0px
          width 78%
          .catalog_object-type
            width 100%
        .price-box
          position relative
          width 100%
          text-align right
          .info-resourse
            width auto
            float left
            margin-bottom 0
            transform translateY(50%)
