/*!******************************
 *
 *   M22-catalog.styl
 *
 ******************************/
#catalog
  .catalog_items
    display flex
    .catalog_item
      background-color #b7c19f
      text-transform uppercase
      padding 7px 75px
      margin-right 20px
      &:last-child
        margin-right 0
      a
        color #fff
        font-size 22px
        line-height 22px
  .pull-left
    li
      .wrapper-select
        float right
        border none
        span
          margin-left 10px
          padding 0
          border: none
          &:after
            top 4px
            left 50px
            right 0

  .catalog_buttons-select,
  .catalog_buttons-checkbox
    display inline-block
    color #fff
    input[type="checkbox"]
      display none
      & + label
        position relative
        padding-left 25px
        &:before
          content ""
          display block
          position absolute
          left 0
          top 6px
          width 10px
          height 10px
          border 1px solid green
          box-sizing border-box
        &:after
          position absolute
          display none
          top 1px
          left 2px
          content ""
          width 8px
          height 13px
          border 2px solid #008000
          border-left none
          border-top none
          transform rotate(45deg)
    input:checked
      & + label
        &:after
          display block

  .input-group
    margin-bottom 5px
    &:last-child
      span
        &.input-group-addon-remove
          display none
      input
        &.form-control
          border-bottom-right-radius 3px
          border-top-right-radius 3px
    span
      &.input-group-addon-remove
        cursor pointer
        background none
        border none

.catalog__promo
  display flex
  flex-wrap wrap

.catalog_product
  padding 15px 0
  .catalog-box
    margin-bottom 15px
    padding-bottom 10px
    border-bottom 1px solid #dbdbdb
    .catalog__promo
      display flex
      position relative
      .image-cell
        width 16%
      .info-cell
        width 81%
        margin-left 15px
        .text-title
          font-size 13px
          line-height 17px
          color blue
.catalog_object-type
  width 62%
  margin-top 10px
  margin-bottom 10px
.price-box
  position absolute
  right 0
  width auto
  .info-resourse
    width 100%
    margin-bottom 10px
    background-color grey
    border 4px
    span
      &:nth-of-type(1)
        margin-right 60px
.btn-group
  .btn
    position: relative;
    z-index: 1001;
    outline none
    border 1px solid grey
    &:nth-of-type(1)
      border-top-right-radius 0px
      border-bottom-right-radius 0px
    &:nth-of-type(2)
      background-color white
      border-left none
      border-top-left-radius 0px
      border-bottom-left-radius 0px
      .fa
        margin-left 7px
        transform scale(1.5)
  .dropdown-menu
    width 100%
    top 94%
    min-width auto
    border none
    text-align right
    li
      width 100%

      a
        padding-right 13px
        .fa
          margin-left 7px
      &:nth-of-type(1)
        margin-top 5px

.catalog_page-nav
  margin-bottom 10px
.open
  & > .dropdown-select
    -webkit-transform scale(1, 1)
    transform scale(1, 1)
    opacity 1
    z-index 100
.dropdown-select
  position absolute
  right 0
  opacity .3
  -webkit-transform-origin top
  transform-origin top
  transform translateX(50px)
  -webkit-animation-fill-mode forwards
  animation-fill-mode forwards
  -webkit-transform scale(1, 0)
  transition all 0.3s linear
  -webkit-transition all 0.3s linear
  li
    display block
.caret-up
  width 0
  height 0
  border-left 4px solid rgba(0, 0, 0, 0)
  border-right 4px solid rgba(0, 0, 0, 0)
  border-bottom 4px solid
  display inline-block
  margin-left 2px
  vertical-align middle

.btn-group
  li
    position relative
  & > li
    margin-right 10px

.info-block
  max-width 210px
  margin 0 auto
  .img-box
    width 175px
    height 175px

@media (max-width: 650px)
  .catalog_product
    .catalog-box
      .catalog__promo
        .image-cell
          margin-right 15px
        .info-cell
          margin-left 0px
          width 78%
          .catalog_object-type
            width 100%
        .price-box
          position relative
          width 100%
          text-align right
