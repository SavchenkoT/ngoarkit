

.feature-object-list
  padding-bottom 40px
  .panel-body
    &__object
      padding-bottom 50px
      border-bottom 2px solid #d0d2d3
      margin-bottom 10px
  .group-buttons
    padding-top 20px
    +below($mqPhone)
      text-align center



  .info-block
    padding-left 0
    padding-right 0
    border-bottom none

    .add-img
      width 100%
      height 200px
      border 1px solid #d0d2d3
      border-radius 4px
      text-align center
      margin-bottom 20px

      btn.btn-link-big
        font-size 90px
        display block
        margin-top 40px
        .fa
          color #e6e7e8
  .btn
    width calc(50% - 4px)
    max-width 260px
    font-size 14px
    font-weight 700
    color #5c5c5c
    text-shadow 0 1px 1px rgba(0,0,0,.2)
    border 1px solid #5c5c5c
    padding 10px 26px
    white-space normal
    text-transform uppercase
  .btn-outline__object
    max-width 260px
    a
      padding-top 5px
      padding-bottom 5px
      text-transform uppercase
  .btn-color__object
    max-width 260px
    background-color #f6921e
    border-color #f6921e
    &:hover
      background-color #f7b05d
      border-color #f7b05d
.object-list-table
  width 100%
  padding-bottom 40px
  .btn
      width calc(50% - 4px)
      font-size 14px
      font-weight 700
      color #5c5c5c
      text-shadow 0 1px 1px rgba(0,0,0,.2)
      border 1px solid #5c5c5c
      padding 10px 26px
      white-space normal
      text-transform uppercase
  .group-buttons
    width 100%
    padding-top 25px
  .btn-outline__object
    max-width 260px
    a
      padding-top 5px
      padding-bottom 5px
      text-transform uppercase
  .btn-color__object
    max-width 260px
    background-color #f6921e
    border-color #f6921e
    &:hover
      background-color #f7b05d
      border-color #f7b05d
