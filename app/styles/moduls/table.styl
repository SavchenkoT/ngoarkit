table.table-bordered
  width 100%
  border-collapse collapse
  border none

  thead
   background-color #d0d2d3
   > tr
     padding 5px
  tbody
    height 562px
    overflow-y auto
    width 100%

  .table-bordered thead,
  .table-bordered tbody,
  .table-bordered tr,
  .table-bordered td,
  .table-bordered th
    display: inline-block

  .table-bordered thead
    background #d0d2d3
    color #58595b

  .table-bordered tbody td,
  .table-bordered thead > tr> th
    float: left
    border-bottom-width: 0

  .table-bordered>tbody>tr>td,
  .table-bordered>tbody>tr>th,
  .table-bordered>tfoot>tr>td,
  .table-bordered>tfoot>tr>th,
  .table-bordered>thead>tr>td,
  .table-bordered>thead>tr>th
    padding: 8px 15px
    height: 50px
    text-align: center
    line-height: 32px

  .odd
    background: #ffffff
    color: #000

  .even
    background: #efefef
    color: #000

  .table-bordered_scrollbar
    height: 612px
    overflow-y: scroll

  .table-bordered_scrollbar::-webkit-scrollbar-track
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.9)
    border-radius: 10px
    background-color: #444444

  .table-bordered_scrollbar::-webkit-scrollbar
    width: 1%
    min-width: 5px
    background-color: #F5F5F5

  .table-bordered_scrollbar::-webkit-scrollbar-thumb
    border-radius: 10px
    background-color: #D62929
    background-image: -webkit-linear-gradient(90deg, transparent, rgba(0, 0, 0, 0.4) 50%, transparent, transparent)


.table-filter
  width 100%
  font-size 18px
  border-collapse collapse
  margin-bottom 35px
  tr
    th
      line-height 55px
  input[type='text']
    width 50%
    color #dcdee2
    border-radius 4px
    border 1px solid
    font-size 15px
    padding-left 10px
    border-width 1px solid
    +below($mqPhone)
      width 100%
  .text-title
    width 30%
    border-spacing 4px
  .text-content
    width 70%
    border-spacing 4px

.table-responsive
  width 100%
  border-collapse collapse

  thead
   background-color #d0d2d3
   > tr
     padding-top 5px
     padding-bottom 5px
     border-bottom 1px solid #abadb0
     > th
       padding-top 5px
       padding-bottom 5px
  tbody
    height 562px
    overflow-y auto
    width 100%

    > tr

      border-bottom 1px solid #abadb0

      > th, td
        border-right 1px solid #abadb0
        padding-top 5px
        padding-bottom 5px

      > td
        &:last-child
          border-right none
