//
// Buttons
// --------------------------------------------------


// Base styles
// --------------------------------------------------

.btn
  position relative
  display inline-block
  margin-bottom 0 // For input.btn
  font-weight bold //$btn-font-weight
  text-align center
  vertical-align middle
  touch-action manipulation
  cursor pointer
  background-image none // Reset unusual Firefox-on-Android default style see https://github.com/necolas/normalize.css/issues/214
  border 2px solid transparent
  white-space nowrap
  button-size($padding-base-vertical, $padding-base-horizontal, $font-size-base, $line-height-base, $btn-border-radius-base)
  user-select none
  background-image url(images/button.svg)
  background-position center -150px
  background-repeat no-repeat
  transition all 0.3s
  overflow hidden
  span
    transition all 0.3s
    display inline-block

  &.btn-default
    background-image url(images/button-arr-grey.svg)
  .dropdown &
    background-image none
    span
      transform none !important
      /*
      overflow hidden
      span
        outline none
        position relative
        display block
        transition: all 0.5s
        &:before
          display block
          position absolute
          left auto
          right auto
          text-align center
          font-family: 'orm-ico' !important;
          font-weight normal
          content '\e919'
          font-size 31px
          line-height 31px
          margin-top -100px
          width 31px
          height 15px
          margin -100px auto 0
      */

  &,
  &:active,
  &.active
    &:focus,
    &.focus
      tab-focus()



  &:not(.dropdown-toggle):not(.disabled):not([disabled]):hover,
  &:not(.dropdown-toggle):not(.disabled):not([disabled]):focus,
  &:not(.dropdown-toggle):not(.disabled):not([disabled]).focus
    //color $btn-default-color
    text-decoration none
    //color transparent
  &input:not(.dropdown-toggle):not(.disabled):not([disabled]):hover
    color transparent

  &:not(.dropdown-toggle):not(.disabled):not([disabled]):hover
    background-position center center
    span
      transform translateY(200px)


  &:active,
  &.active
    outline 0
    background-image none
    //box-shadow inset 0 3px 5px rgba(0, 0, 0, .125)

  &.disabled,
  &[disabled],
  fieldset[disabled] &
    cursor $cursor-disabled
    opacity-ie(.65)
    box-shadow none

  a&
    &.disabled,
    fieldset[disabled] &
      pointer-events none // Future-proof disabling of clicks on `<a>` elements
input.btn:hover,
input.btn:focus,
input.btn.focus
    color transparent

// Alternate buttons
// --------------------------------------------------

.btn-default
  button-variant($btn-default-color, $btn-default-bg, $btn-default-border)
  &:hover
    button-variant($btn-default-color, $btn-default-bg, $btn-default-border-hover)
    +below($mqTablet)
      button-variant($btn-default-color, $btn-default-bg, $btn-default-border)
      color $btn-default-color !important
      background-image none
      span
        transform none !important
        opacity 1

  .-corporate &
    button-variant($btn-default-color, $btn-default-bg, $btn-default-border-corporate)
    &:hover
      button-variant($btn-default-color-hover, $btn-default-bg-hover, $btn-default-border-corporate-hover)
      +below($mqTablet)
        button-variant($btn-default-color, $btn-default-bg, $btn-default-border-corporate)
        color $btn-default-color !important
        background-image none
        span
          transform none !important
          opacity 1

.btn-primary
  button-variant($btn-primary-color, $btn-primary-bg, $btn-primary-border)
  &:hover
    button-variant($btn-primary-color-hover, $btn-primary-bg-hover, $btn-primary-border-hover)
    +below($mqTablet)
      button-variant($btn-primary-color, $btn-primary-bg, $btn-primary-border)
      color $btn-primary-color !important
      background-image none
      span
        transform none !important
        opacity 1

  .-corporate &
    button-variant($btn-primary-color, $btn-primary-bg-corporate, $btn-primary-border-corporate)
    &:hover
      button-variant($btn-primary-color-hover, $btn-primary-bg-corporate-hover, $btn-primary-border-corporate-hover)
      +below($mqTablet)
        button-variant($btn-primary-color, $btn-primary-bg-corporate, $btn-primary-border-corporate)
        color $btn-primary-color !important
        background-image none
        span
          transform none !important
          opacity 1

// Success appears as green
.btn-success
  button-variant($btn-success-color, $btn-success-bg, $btn-success-border)

// Info appears as blue-green
.btn-info
  button-variant($btn-info-color, $btn-info-bg, $btn-info-border)

// Warning appears as orange
.btn-warning
  button-variant($btn-warning-color, $btn-warning-bg, $btn-warning-border)

// Danger and error appear as red
.btn-danger
  button-variant($btn-danger-color, $btn-danger-bg, $btn-danger-border)


// Link buttons
// -------------------------

// Make a button look and behave like a link
.btn-link
  color $link-color
  font-weight normal
  border-radius 0

  &,
  &:active,
  &.active,
  &[disabled],
  fieldset[disabled] &
    background-color transparent
    box-shadow none

  &,
  &:hover,
  &:focus,
  &:active
    border-color transparent

  &:hover,
  &:focus
    color $link-hover-color
    text-decoration $link-hover-decoration
    background-color transparent

  &[disabled],
  fieldset[disabled] &
    &:hover,
    &:focus
      color $btn-link-disabled-color
      text-decoration none


// Button Sizes
// --------------------------------------------------

.btn-lg
  // line-height ensure even-numbered height of button next to large input
  button-size($padding-large-vertical, $padding-large-horizontal, $font-size-large, $line-height-large, $btn-border-radius-large)

.btn-sm
  // line-height ensure proper height of button next to small input
  button-size($padding-small-vertical, $padding-small-horizontal, $font-size-small, $line-height-small, $btn-border-radius-small)

 .btn-xs
   button-size($padding-xs-vertical, $padding-xs-horizontal, $font-size-small, $line-height-small, $btn-border-radius-small)


// Block button
// --------------------------------------------------

.btn-block
  display block
  width 100%

// Vertically space out multiple block buttons
.btn-block + .btn-block
  margin-top 5px

// Specificity overrides
input[type="submit"],
input[type="reset"],
input[type="button"]
  &.btn-block
    width 100%
