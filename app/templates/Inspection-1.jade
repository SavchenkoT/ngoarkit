extends layouts/default
block vars
  - page.title = 'Inspection-1'
  - page.bodyid = 'authpage'

block content
  .container
    .row
      include modules/M01-navbar
      #accordion
        .panel-group
          .panel.panel-heading
            btn.btn-link.addcollection
              i.fa.fa-plus(aria-hidden='true')
            ul.list-inspection
              li 
                a(href="#") ОСББ Менеджмент
              li  >
              li Management
            form.navbar-form.navbar-right.form-horizontal(role='search')
              .input-group
                button.btn(type='submit')
                  i.fa.fa-search(aria-hidden='true')
                input.search-box(type='text', placeholder='Search')
                span.clickable
                  i.fa.fa-chevron-down(aria-hidden='true')
                span
                  i.fa.fa-ellipsis-v(aria-hidden='true')
          .panel-body.not-padd
            include modules/M06-Slavutich

    .row
      .col-md-3
        include modules/M14-filters-inspection
        include modules/M15-filters-object

      .col-md-9
        include modules/M18-inspection-for-object
        include modules/M20-statistic
        include modules/M05-tables-inspection
        include modules/M17-pagination
